definition
	CLUSTER[at0000] matches {	-- Occupation record
		items cardinality matches {1..*; unordered} matches {
			ELEMENT[at0001] occurrences matches {0..1} matches {	-- Occupation category
				value matches {
					DV_TEXT matches {*}
				}
			}
			ELEMENT[at0016] occurrences matches {0..1} matches {	-- Description
				value matches {
					DV_TEXT matches {*}
				}
			}
			ELEMENT[at0007] occurrences matches {0..1} matches {	-- Date commenced
				value matches {
					DV_DATE_TIME matches {*}
				}
			}
			ELEMENT[at0005] occurrences matches {0..*} matches {	-- Title/role
				value matches {
					DV_TEXT matches {*}
				}
			}
			ELEMENT[at0015] occurrences matches {0..1} matches {	-- Activity category
				value matches {
					DV_CODED_TEXT matches {
						defining_code matches {
							[local::
							at0020, 	-- Full-time
							at0021]	-- Part-time
						}
					}
					DV_TEXT matches {*}
				}
			}
			ELEMENT[at0013] occurrences matches {0..1} matches {	-- Full time equivalent
				value matches {
					DV_PROPORTION matches {
						numerator matches {|>=0.0|}
						type matches {1, 2}
					}
				}
			}
			ELEMENT[at0019] occurrences matches {0..1} matches {	-- Time
				value matches {
					C_DV_QUANTITY <
						property = <[openehr::709]>
						list = <
							["1"] = <
								units = <"h/d">
								magnitude = <|>=0.0|>
								precision = <|1|>
							>
							["2"] = <
								units = <"h/wk">
								magnitude = <|>=0.0|>
								precision = <|1|>
							>
							["3"] = <
								units = <"h/mo">
								magnitude = <|>=0.0|>
								precision = <|1|>
							>
							["4"] = <
								units = <"h/a">
								magnitude = <|>=0.0|>
								precision = <|1|>
							>
							["5"] = <
								units = <"d/wk">
								magnitude = <|>=0.0|>
							>
							["6"] = <
								units = <"d/mo">
								magnitude = <|>=0.0|>
							>
							["7"] = <
								units = <"wk/mo">
								magnitude = <|>=0.0|>
							>
							["8"] = <
								units = <"d/a">
								magnitude = <|>=0.0|>
							>
							["9"] = <
								units = <"wk/a">
								magnitude = <|>=0.0|>
							>
						>
					>
				}
			}
			allow_archetype CLUSTER[at0004] occurrences matches {0..*} matches {	-- Organisation details
				include
					archetype_id/value matches {/openEHR-EHR-CLUSTER\.organisation(-[a-zA-Z0-9_]+)*\.v0|openEHR-EHR-CLUSTER\.organisation(-[a-zA-Z0-9_]+)*\.v1/}
			}
			ELEMENT[at0002] occurrences matches {0..1} matches {	-- Industry
				value matches {
					DV_TEXT matches {*}
				}
			}
			ELEMENT[at0006] occurrences matches {0..1} matches {	-- Occupation classification
				value matches {
					DV_TEXT matches {*}
				}
			}
			allow_archetype CLUSTER[at0018] occurrences matches {0..*} matches {	-- Additional details
				include
					archetype_id/value matches {/.*/}
			}
			ELEMENT[at0008] occurrences matches {0..1} matches {	-- Date ceased
				value matches {
					DV_DATE_TIME matches {*}
				}
			}
			ELEMENT[at0014] occurrences matches {0..1} matches {	-- Comment
				value matches {
					DV_TEXT matches {*}
				}
			}
		}
	}



ontology
	term_definitions = <
		["en"] = <
			items = <
				["at0000"] = <
					text = <"Occupation record">
					description = <"A single activity, service trade or craft carried out by an individual during a specified period of time.">
					comment = <"The occupation may be paid or unpaid, full-time or part time.">
				>
				["at0001"] = <
					text = <"Occupation category">
					description = <"The occupation category for this record.">
					comment = <"For example: employed, seeking employment, student, home duties or retiree. Coding with a terminology is desirable, where possible.">
				>
				["at0002"] = <
					text = <"Industry">
					description = <"Classification of the industry in which the individual works.">
					comment = <"For example: Mining, manufacturing, construction.">
				>
				["at0004"] = <
					text = <"Organisation details">
					description = <"Details about the employer or institution.">
